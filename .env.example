# Application settings
PROJECT_NAME=Audio Notes API
VERSION=0.1.0
DEBUG=False

# CORS settings (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database settings
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/audio_notes

# RabbitMQ settings
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_QUEUE_TRANSCRIPTION=transcription_queue
RABBITMQ_QUEUE_SUMMARIZATION=summarization_queue

# File upload settings
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800  # 50 MB in bytes

# SuperTokens settings
SUPERTOKENS_CONNECTION_URI=http://localhost:3567
SUPERTOKENS_API_KEY=
SUPERTOKENS_APP_NAME=Audio Notes
SUPERTOKENS_API_DOMAIN=http://localhost:8000
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000

# Deepgram API settings
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# Google Gemini API settings
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Redis settings (optional)
REDIS_URL=redis://localhost:6379/0

# Security settings
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string
